<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

        <EditText
            android:id="@+id/editStartPoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Start"/>

        <EditText
            android:id="@+id/editEndPoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="End"/>

        <EditText
            android:id="@+id/editDepartureTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Departure time"/>

        <EditText
            android:id="@+id/editArriveTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Arrive time"/>

        <EditText
            android:id="@+id/editPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Prise"/>

        <EditText
            android:id="@+id/editDistanse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Distanse"/>

        <Button
            android:id="@+id/btnOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK"/>

        <TextView
            android:id="@+id/textUserInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Разработал Ровнейко З. С. АС-64"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>